generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Barber {
  id             Int              @id @default(autoincrement())
  name           String
  title          String
  bio            String?
  imageUrl       String?
  email          String?
  appointments   Appointment[]
  schedules      Schedule[]
  dateExceptions DateException[]
  user           User?            @relation(fields: [userId], references: [id])
  userId         Int?             @unique
}

model Service {
  id           Int           @id @default(autoincrement())
  name         String
  price        Float
  duration     Int           // in minutes
  description  String?
  appointments Appointment[]
}

model Appointment {
  id            Int      @id @default(autoincrement())
  startTime     DateTime
  endTime       DateTime
  barberId      Int
  barber        Barber   @relation(fields: [barberId], references: [id])
  serviceId     Int
  service       Service  @relation(fields: [serviceId], references: [id])
  customerName  String
  customerPhone String
  customerEmail String?
  status        String   @default("PENDING") // PENDING, CONFIRMED, CANCELLED, BLOCKED
  isPriority    Boolean  @default(false)
  totalPrice    Float
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Schedule {
  id        Int     @id @default(autoincrement())
  barberId  Int
  barber    Barber  @relation(fields: [barberId], references: [id])
  dayOfWeek Int     // 0=Sunday, 1=Monday, ..., 6=Saturday
  startTime String  // Format "HH:mm" e.g., "10:00"
  endTime   String  // Format "HH:mm" e.g., "17:00"
  isWorking Boolean @default(true)

  @@unique([barberId, dayOfWeek])
}

// Blocked dates (vacations, sick days, etc.)
model DateException {
  id        Int      @id @default(autoincrement())
  barberId  Int
  barber    Barber   @relation(fields: [barberId], references: [id])
  date      DateTime
  reason    String?
  createdAt DateTime @default(now())

  @@unique([barberId, date])
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  barber   Barber?
}